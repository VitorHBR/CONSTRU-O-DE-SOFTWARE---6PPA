<!--Para fazer com fetch-->
<script src="/js/Funcionario/listar.js"></script>

<div>
  <h1>Funcionários</h1>

  <div>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <form class="d-flex" role="search" method="post" action="/funcionario/buscarfuncionario">
          <input class="form-control me-2" type="search" placeholder="Procurar" aria-label="Search" name="busca">
          <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
          data-bs-whatever="@mdo"><i class="fas fa-plus"></i> Cadastrar</button>
      </div>
    </nav>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar Novo Funcionario</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form method="post" action="/funcionario/cadastrarfuncionario">
              <div class="mb-3">
                <label for="nome" class="col-form-label">Nome:</label>
                <input name="nome" type="text" class="form-control" id="nome">
              </div>
              <div class="mb-3">
                <label for="telefone" class="col-form-label">Telefone:</label>
                <input name="telefone" type="text" class="form-control" id="telefone">
              </div>
              <div class="mb-3">
                <label for="endereco" class="col-form-label">Endereço:</label>
                <input name="endereco" type="text" class="form-control" id="endereco">
              </div>
              <div class="mb-3">
                <label for="email" class="col-form-label">E-mail:</label>
                <input name="email" type="email" class="form-control" id="email">
              </div>

              <div class="mb-3">
                <label for="senha" class="col-form-label">Senha:</label>
                <input name="senha" type="password" class="form-control" id="senha" required pattern=".{1,}">
              </div>

              <button class="btn btn-primary" type="submit">Cadastrar</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="table-responsive" style="margin-top: 15px;">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Código</th>
          <th>Nome</th>
          <th>Telefone</th>
          <th>Endereço</th>
          <th>E-mail</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% lista.map(function(value, index) { %>
          <tr>
            <td id="idFuncionario">
              <%= value.idFuncionario %>
            </td>
            <td id="nome">
              <%= value.nome %>
            </td>
            <td id="telefone">
              <%= value.telefone %>
            </td>
            <td id="endereco">
              <%= value.endereco %>
            </td>
            <td id="email">
              <%= value.email %>
            </td>
            <td>
              <div class="d-flex">
                <div class="me-1">
                  <button onclick="alterar('<%= value.idFuncionario %>')" type="button" class="btn btn-primary"
                    data-bs-toggle="modal" data-bs-target="#exampleAlterar<%= value.idFuncionario %>"
                    data-bs-whatever="@alterar">
                    <i class="fas fa-pen"></i>
                  </button>
                  <div class="modal fade" id="exampleAlterar<%= value.idFuncionario %>" tabindex="-1"
                    aria-labelledby="exampleAlterar<%= value.idFuncionario %>Label" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">

                          <h1 class="modal-title fs-5" id="exampleAlterar<%= value.idFuncionario %>Label">Alterar Funcionario</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <form method="post" action="/funcionario/alterarfuncionario">
                            <div class="mb-3">
                              <input type="text" hidden="true" name="idFuncionario" value="<%= value.idFuncionario %>">
                              <label for="alterarnome" class="col-form-label">Nome:</label>
                              <input name="nome" type="text" class="form-control" id="alterarnome"
                                value="<%= value.nome %>">
                            </div>

                            <div class="mb-3">
                              <label for="alterartelefone" class="col-form-label">Telefone:</label>
                              <input name="telefone" class="form-control" id="alterartelefone"
                                value="<%= value.telefone %>">
                            </div>

                            <div class="mb-3">
                              <label for="alterarendereco" class="col-form-label">Endereço:</label>
                              <input name="endereco" type="text" class="form-control" id="alteraremail"
                                  value="<%= value.endereco %>">
                            </div>

                              <div class="mb-3">
                                <label for="alteraremail" class="col-form-label">E-mail:</label>
                                <input name="email" type="email" class="form-control" id="alteraremail"
                                  value="<%= value.email %>">
                              </div>

                              <div class="mb-3">
                                <label for="alterarsenha" class="col-form-label">Senha:</label>
                                <input name="senha" type="password" class="form-control" id="alterarsenha" value="<%= value.senha %>" required pattern=".{1,}">
                              </div>
                              
                              <button class="btn btn-primary" type="submit">Alterar</button>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                  <a class="btn btn-danger" href="/funcionario/deletarfuncionario/<%= value.idFuncionario %>" role="button"><i
                    class="fas fa-trash"></i></a>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>